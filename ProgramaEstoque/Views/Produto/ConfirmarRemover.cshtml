@model ProgramaEstoque.Models.ProdutoModel

@{
    ViewData["Title"] = "Remover Produto";
}

<div class="container text-center">
    <div class="row">
        <div class="col-12">
            <p>Você deseja remover o Produto: @Model.Nome?</p>
        </div>
    </div>

    <div class="row">
        <div class="col-6">
            <form asp-controller="Produto" asp-action="Index">
                <button type="submit" class="btn btn-danger">Cancelar</button>
            </form>
        </div>
        <div class="col-6">
            <form form asp-controller="Produto" asp-action="RemoverProduto">
                <input type="hidden" name="cd_produto" value="@Model.Id" />
                <button type="submit" class="btn btn-primary">Confirmar</button>
            </form>
        </div>
    </div>
</div>