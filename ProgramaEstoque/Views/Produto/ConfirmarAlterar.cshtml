@model ProgramaEstoque.Models.ProdutoModel

@{
    ViewData["Title"] = "Confirmar Cadastro";
}

<div class="container text-center">
    <div class="row">
        <div class="col-12">
            <p>Você deseja alterar o Produto: @Model.Nome?</p>
        </div>
    </div>

    <div class="row">
        <div class="col-6">
            <form asp-controller="Produto" asp-action="Index">
                <button type="submit" class="btn btn-danger">Cancelar</button>
            </form>
        </div>
        <div class="col-6">
            <form asp-controller="Produto" asp-action="AlterarProduto">
                <input type="hidden" name="cd_produto" value="@Model.Id" />
                <input type="hidden" name="novo_nome" value="@Model.Nome" />
                <input type="hidden" name="novo_preco" value="@Model.Preco" />
                <input type="hidden" name="nova_quantidade" value="@Model.Quantidade" />

                <button type="submit" class="btn btn-primary">Confirmar</button>
            </form>
        </div>
    </div>
</div>